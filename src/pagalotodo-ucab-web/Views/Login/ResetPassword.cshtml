@model ChangePasswordModel

<!DOCTYPE html>
<html>
<head>
    <title>Cambiar Contraseña</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        .frame {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            max-width: 800px;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .p-login {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
            color: #333;
        }

        .alert {
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
                color: #333;
            }

        .form-styling {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            transition: border-color 0.3s;
        }

            .form-styling:focus {
                border-color: #5f9ea0;
            }

        .text-danger {
            color: #dc3545;
        }

        .btn-signup {
            display: block;
            width: 100%;
            padding: 10px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            background-color: #5f9ea0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-signup:hover {
                background-color: #4b8a8c;
            }
    </style>
</head>
<body>
    <div class="frame">
        <div class="container">
            <p class="p-login">Ingrese el token y su nueva clave:</p>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                }

                <div class="form-group">
                    @Html.LabelFor(model => model.password)
                    @Html.TextBoxFor(model => model.password, new { @class = "form-styling" })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.token)
                    @Html.PasswordFor(model => model.token, new { @class = "form-styling" })
                    @Html.ValidationMessageFor(model => model.token, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-signup">Cambiar clave</button>

            }
        </div>
    </div>
</body>
</html>
