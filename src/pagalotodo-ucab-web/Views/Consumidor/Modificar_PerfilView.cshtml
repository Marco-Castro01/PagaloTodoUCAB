@model UsuariosModel

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}



<h1>Perfil</h1>

<form asp-action="Modificar_Perfil" method="post" class="frame">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="name">Nombre:</label>
        <input type="text" class="form-styling" id="name" name="name" value="@Model.name" required>
    </div>
    <div class="form-group">
        <label for="name">Email:</label>
        <input type="text" class="form-styling" id="email" name="email" value="@Model.email" required>
    </div>
    <div class="form-group">
        <label for="cedula">Cédula:</label>
        <input type="text" class="form-styling" id="cedula" name="cedula" value="@Model.cedula" >
    </div>
    <div class="form-group">
        <label for="nickName">NickName:</label>
        <input type="text" class="form-styling" id="nickName" name="nickName" value="@Model.nickName" required>
    </div>
    
    <button type="submit" class="btn btn-primary">Guardar cambios</button>
</form>
