@using UCABPagaloTodoWeb.enums
@model List<DeudaModel>

<style>
    /* Estilos para la tarjeta de deuda */
    .card {
        width: 350px;
        margin: 10px;
        border-radius: 6px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0px 1px 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-out;
    }

        .card:hover {
            box-shadow: 5px 5px 20px rgba(0, 0, 0, 0.4);
            transform: translateY(-3%);
        }

        .card .contenido-card {
            padding: 20px;
            text-align: center;
        }

        .card h3 {
            margin-bottom: 15px;
            color: #1e2a78;
        }

        .card p {
            color: #6a6a6a;
            margin-bottom: 10px;
        }

        .card ul {
            list-style: none;
            padding: 0;
        }

            .card ul li {
                margin-bottom: 5px;
                color: #6a6a6a;
            }

    .btn-pagar-container {
        display: flex;
        justify-content: center;
    }

    .btn-pagar {
        padding: 8px 16px;
        font-size: 16px;
        color: #fff;
        background-color: #28a745;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-pagar:hover {
            background-color: #218838;
        }

    /* Estilos para el contenedor de las tarjetas */
    .container-card {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin: 20px auto;
    }

    /* Estilos para el encabezado */
    h1 {
        text-align: center;
        margin: 20px 0;
        color: #1e2a78;
    }

    /* Estilos para el mensaje de sin deudas */
    .alert-info {
        text-align: center;
        margin: 20px auto;
        padding: 10px;
        background-color: #f0f8ff;
        color: #1e2a78;
        border-radius: 4px;
    }
</style>
<h1>Lista de Deudas</h1>

<div class="container-card">
    @foreach (var deuda in Model)
    {
        <div class="card">
            <div class="contenido-card">
                <h3>@deuda.servicioName</h3>
                <p>Identificador: @deuda.identificador</p>
                <p>Deuda: @deuda.deuda</p>

                <div class="btn-pagar-container">
                    <a class="btn-pagar" href="@Url.Action("PagarView", "Consumidor", new { idDeuda = deuda.idDeuda })">Pagar</a>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info" role="alert">
        Sin deudas asociadas.
    </div>
}

