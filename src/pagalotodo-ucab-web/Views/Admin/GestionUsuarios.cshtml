@model List<UsuariosModel>

<h1>Usuarios</h1>

@if (ViewBag.Error != null)
{
    <p>Error: @ViewBag.Error</p>
}
else
{
    <a href="@Url.Action("RegistrarAdmin", "Admin" ) ">
        <button type="button" class="btn btn-success">Agregar Administrador</button>
    </a>
    <a href="@Url.Action("RegistrarPrestador", "Admin")">

        <button type="button" class="btn btn-success">Agregar Prestador</button>
    </a>
    
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Nombre</th>
                <th>Cédula</th>
                <th>Nickname</th>
                <th>Estado</th>  
                <th>Rif</th>
                <th>TIpo de usuario</th>
                <th>Opciones</th> <!-- Nueva columna -->
            </tr>
            </thead>
            <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@usuario.Id</td>
                    <td>@usuario.email</td>
                    <td>@usuario.name</td>
                    <td>@usuario.cedula</td>
                    <td>@usuario.nickName</td>
                    <td>@(usuario.status ? "Activo" : "Inactivo")</td>
                    <td>@usuario.rif</td>
                    <td> @usuario.Discriminator</td>


                    <td>
                        <a href="@Url.Action("Modificar", "Admin", new { cedula = usuario.cedula,name=usuario.name, rif= usuario.rif, id = usuario.Id, nickname = usuario.nickName, usuario.status})">Modificar</a>
                        <a href="@Url.Action("CambiarContrasena", "Admin", new { id = usuario.Id })">Cambiar contraseña</a>
                    </td> <!-- Nueva columna -->
                </tr>
            }
            </tbody>
        </table>
    </div>
}